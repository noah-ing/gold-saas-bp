<% content_for :title, "Admin Dashboard" %>

<h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold text-gray-700">Total Users</h2>
    <p class="text-4xl font-bold mt-2 text-indigo-600"><%= @total_users %></p>
  </div>
  
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold text-gray-700">Active Subscriptions</h2>
    <p class="text-4xl font-bold mt-2 text-green-500"><%= @active_subscriptions %></p>
  </div>
  
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold text-gray-700">Trialing Users</h2>
    <p class="text-4xl font-bold mt-2 text-blue-500"><%= @trialing_users %></p>
  </div>
  
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold text-gray-700">Past Due</h2>
    <p class="text-4xl font-bold mt-2 text-yellow-500"><%= @past_due_users %></p>
  </div>
</div>

<div class="bg-white p-6 rounded-lg shadow-md">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-semibold text-gray-700">Quick Actions</h2>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <%= link_to admin_users_path, class: "p-4 border rounded-lg flex items-center space-x-3 hover:bg-gray-50" do %>
      <div class="text-indigo-600 bg-indigo-100 rounded-full p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
        </svg>
      </div>
      <div>
        <h3 class="font-medium">Manage Users</h3>
        <p class="text-sm text-gray-500">View, edit, and manage user accounts</p>
      </div>
    <% end %>
    
    <%= link_to dashboard_path, class: "p-4 border rounded-lg flex items-center space-x-3 hover:bg-gray-50" do %>
      <div class="text-indigo-600 bg-indigo-100 rounded-full p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
        </svg>
      </div>
      <div>
        <h3 class="font-medium">Return to App</h3>
        <p class="text-sm text-gray-500">View the regular user dashboard</p>
      </div>
    <% end %>
  </div>
</div>
