<h1 class="text-2xl font-semibold">Welcome to gold-saas-bp</h1>
<p class="mt-2 text-gray-600">This is the public landing page.</p>

<% if user_signed_in? %>
  <p class="mt-4 text-green-600">You are signed in as <%= current_user.email %>.</p>
  <div class="mt-2 space-x-4">
    <%= link_to 'Go to Dashboard', dashboard_path, class: "text-blue-500 hover:underline" %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "text-red-500 hover:underline" %>
  </div>
<% else %>
  <div class="mt-6">
    <h2 class="text-lg font-medium">Sign in with a magic link</h2>
    <%= form_with url: user_magic_link_path, method: :post, local: true, class: "mt-2" do |form| %>
      <div class="flex items-center space-x-2">
        <%= form.email_field :email, placeholder: "Enter your email", class: "border p-2 rounded w-64" %>
        <%= form.submit "Send link", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      </div>
    <% end %>

    <p class="mt-4 text-sm text-gray-600">
      Or use
      <%= link_to 'email/password login', new_user_session_path, class: "text-blue-400 hover:underline" %>
    </p>
  </div>
<% end %>
