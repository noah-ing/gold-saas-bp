<div class="mx-auto max-w-3xl px-4 py-6 sm:px-6 lg:px-8">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Account Settings</h1>
    <p class="mt-1 text-sm text-gray-500">Manage your account settings and preferences</p>
  </div>

  <% if notice %>
    <div class="bg-green-50 p-4 mb-6 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="bg-red-50 p-4 mb-6 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-red-800"><%= alert %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Account Information Section -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Account Information</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Your account details and profile</p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @user.email %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @user.name.presence || "Not set" %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Account created</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Subscription status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <% if @user.subscribed? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Active
              </span>
              <% if @user.current_plan %>
                (<%= @user.current_plan.name %> Plan)
              <% end %>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                No active subscription
              </span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Account Links Section -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Quick Actions</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Common account-related tasks</p>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <%= link_to users_profile_path, class: "rounded-md border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 text-center" do %>
          Edit Profile
        <% end %>
        
        <%= link_to users_preferences_path, class: "rounded-md border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 text-center" do %>
          Notification Preferences
        <% end %>
      </div>
    </div>
  </div>

  <!-- Danger Zone Section -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-red-600">Danger Zone</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Delete your account and all associated data</p>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
      <div class="mb-4">
        <p class="text-sm text-gray-500">
          Deleting your account is permanent and cannot be undone. All your data will be deleted, and you will lose access to all your subscriptions and resources.
        </p>
      </div>

      <div class="mt-4">
        <button type="button" onclick="document.getElementById('deleteAccount').classList.remove('hidden')" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          Delete Account
        </button>
      </div>

      <!-- Delete Account Confirmation Modal -->
      <div id="deleteAccount" class="hidden mt-4 border border-red-200 rounded-md p-4 bg-red-50">
        <h4 class="text-md font-medium text-red-800 mb-2">Confirm Account Deletion</h4>
        <p class="text-sm text-red-600 mb-4">
          This action cannot be undone. Please enter your email address to confirm.
        </p>
        
        <%= form_with(url: users_account_path, method: :delete) do |form| %>
          <div class="mb-4">
            <%= form.label :confirm_email, "Your email address", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :confirm_email, class: "shadow-sm focus:ring-red-500 focus:border-red-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Enter your email to confirm" %>
            </div>
          </div>

          <div class="flex justify-end space-x-3">
            <button type="button" onclick="document.getElementById('deleteAccount').classList.add('hidden')" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Cancel
            </button>
            <%= form.submit "Permanently Delete Account", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", data: { confirm: "Are you absolutely sure? This cannot be undone." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
